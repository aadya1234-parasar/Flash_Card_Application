<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".What_physics_Activity"
    android:background="#2d2d"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is Chemistry?"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            >
        </TextView>

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Known Statement"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="#2d2d"
            />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unknown Statement"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:background="#2d2d"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:text="The branch of Science concerned with the substances of which matter is composed, the investigation of their properties and reactions, and the use of such reactions to form new substances. "
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"

                />


        </LinearLayout>


    </LinearLayout>




</LinearLayout>
